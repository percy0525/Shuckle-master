<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">64px</item>
        <item name="android:paddingBottom">64px</item>
        <item name="android:textColor">#ffCB05</item>
        <item name="android:textSize">72dp</item>
        <item name="android:shadowColor">#3960AB</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RecordStyle">
        <item name="android:paddingLeft">64px</item>
        <item name="android:paddingBottom">64px</item>
        <item name="android:textColor">#ffCB05</item>
        <item name="android:textSize">60dp</item>
        <item name="android:shadowColor">#3960AB</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
